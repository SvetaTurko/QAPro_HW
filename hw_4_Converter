var distance;
var time;
var weight;
var amount = 3;

switch (distance) {
  case distance:
    console.log(amount + ' км це ' + amount*1000 +' м');
  case time:
    console.log(amount + ' год це ' + amount*60 + ' хв');
  case weight:
    console.log(amount + ' кг це ' + amount*10000 + ' г');
	break;
  default:
    console.log('Не коректне значення');
    
}